extends ../layout

block title
  title= data.title

block content
  #container
    h1
      a(href="https://www.google.co.jp/search?q=#{data.title}",target="blank")= data.title
    h2= data.date
    h3= data.detail
    if data.reserved
      div 予約済み
      form(action="/program/reserve/cancel/#{data._id}", method="post")
        input(type="submit", value="録画しない")
    else
      form(action="/program/reserve/#{data._id}", method="post")
        input(type="submit", value="録画予約")
      
